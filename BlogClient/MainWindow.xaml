<Window x:Class="Blog.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:client="clr-namespace:Blog.Client"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <client:BlogViewModel x:Key="ViewModel"></client:BlogViewModel>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"></ColumnDefinition>
            <ColumnDefinition Width="70*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Margin="8" Grid.Row="0">Добавить статью</Button>
        <Label Grid.Column="0" Margin="8" Grid.Row="1">Список статей</Label>
        <ListBox Grid.Row="2" Grid.Column="0"/>
        <Grid Grid.Column="1" Grid.Row="1" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="50*"></RowDefinition>
                <RowDefinition Height="50*"></RowDefinition>
            </Grid.RowDefinitions>
        </Grid>

    </Grid>
</Window>
